<h2>登録情報編集</h2>

  <%= form_for(@user, url:customers_user_path) do |f| %>
    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">名前</h7>
      <div class="col-md-4">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-10",placeholder: "性" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-md-10",placeholder: "名" %>
      </div>
    </div>

    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">フリガナ</h7>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-10",placeholder: "セイ" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-10",placeholder: "メイ" %>
      </div>
    </div>

    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">メールアドレス</h7>
      <div class="col-md-4">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-md-10",placeholder: "メールアドレス" %>
      </div>
    </div>

    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">郵便番号(ハイフンなし)</h7>
      <div class="col-md-4">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-10",placeholder: "郵便番号" %>
      </div>
    </div>

    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">住所</h7>
      <div class="col-md-9">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-md-10",placeholder: "住所" %>
      </div>
    </div>

    <div class="col-md-12 sign-up-form">
      <h7 class="col-md-3">電話番号(ハイフンなし)</h7>
      <div class="col-md-4">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-md-10",placeholder: "電話番号" %>
      </div>
    </div>
    <div class="col-md-1 col-md-offset-5">
      <%= f.submit '編集内容を保存する', class: "btn btn-primary" %>
    </div>
    <div class="col-md-1 col-md-offset-5">
      <%= link_to "退会する",unsubscribe_customers_user_path(@user),class: "btn btn-danger" %>
    </div>
    </div>
   <% end %>