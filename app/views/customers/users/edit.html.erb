<h2>登録情報編集</h2>

  <%= form_for(@user, url:customers_user_path) do |f| %>
    <table class="table table-hover table-inverse">
      <tr>
        <th>氏名</th>
        <td>(姓)<%= f.text_field :first_name %>&nbsp;
            (名)<%= f.text_field :last_name %></td>
      </tr>

     <tr>
        <th>フリガナ</th>
        <td>(セイ)<%= f.text_field :first_name_kana %>&nbsp;
            (メイ)<%= f.text_field :last_name_kana %></td>
      </tr>

     <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>

     <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
     </tr>

     <tr>
        <th>住所</th>
        <td><%= f.text_area :address, :size=>"60" %></td>
     </tr>

     <tr>
        <th>電話番号(ハイフンなし)</th>
        <td><%= f.text_field :phone_number %></td>
     </tr>

</table>

    <%= f.submit '編集内容を保存する', class: "btn btn-primary" %>&nbsp;

      <%= link_to "退会する",unsubscribe_customers_user_path(@user),class: "btn btn-danger" %>
   <% end %>