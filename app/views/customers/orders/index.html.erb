<h2>注文履歴一覧</h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配達先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at %></td>
			<td><%= order.address_name %></td>
			<td>商品</td>
			<td><%= order.price %></td>
			<td><%= order.order_status %></td>
			<td><%= link_to "表示する", customers_order_path(order), class: "btn-sm btn-primary" %></td>
		</tr>
		<% end %>
	</tbody>
</table>