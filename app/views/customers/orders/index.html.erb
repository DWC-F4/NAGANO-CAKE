<h2>注文履歴一覧</h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th class="active">注文日</th>
			<th class="active">配送先</th>
			<th class="active">注文商品</th>
			<th class="active">支払金額</th>
			<th class="active">ステータス</th>
			<th class="active">注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td>
				<%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.address_name %>
			</td>
			<td>
				<% order.order_details.each do |order_detail| %>
				<p><%= order_detail.product.name %></p>
				<% end %>
			</td>
			<td><%= order.price.to_s(:delimited) %>円</td>
			<td><%= order.order_status %></td>
			<td><%= link_to "表示する", customers_order_path(order), class: "btn-sm btn-primary" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="text-center"><%= paginate @orders %></div>