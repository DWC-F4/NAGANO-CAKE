<h2>注文履歴詳細</h2>

<div class="col-md-6">
	<p>注文情報</p>
	<table class="table table-bordered">
		<tbody>
			<tr>
				<th>注文日</th>
				<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
			</tr>
			<tr>
				<th>配達先</th>
				<td>
					<%= @order.postal_code %><br>
					<%= @order.address %><br>
					<%= @order.address_name %>
				</td>
			</tr>
			<tr>
				<th>支払方法</th>
				<td><%= @order.payment %></td>
			</tr>
			<tr>
				<th>ステータス</th>
				<td><%= @order.order_status %></td>
			</tr>
		</tbody>
	</table>
</div>

<div class="col-md-6">
	<p>請求情報</p>
	<table class="table table-bordered">
		<tbody>
			<tr>
				<th>商品合計</th>
				<% total = 0 %>
				<% @order.order_details.each do |order_detail| %>
				<% (order_detail.product.price*1.1).round * order_detail.quantity %>
					<% total += (order_detail.product.price*1.1).round * order_detail.quantity %>
				<% end %>
				<td><%= total.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th>配送料</th>
				<td><%= @order.postage %></td>
			</tr>
			<tr>
				<th>ご請求額</th>
				<td><%= (@order.price + @order.postage).to_s(:delimited) %></td>
			</tr>
		</tbody>
	</table>
</div>
<div class="col-md-9">
	<p>注文内容</p>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>商品</th>
				<th>単価(税込)</th>
				<th>個数</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<% @order.order_details.each do |order_detail| %>
			<tr>
				<td><%= order_detail.product.name %></td>
				<td><%= (order_detail.product.price*1.1).round.to_s(:delimited) %></td>
				<td><%= order_detail.quantity %></td>
				<td><%= ((order_detail.product.price*1.1).round * order_detail.quantity).to_s(:delimited) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
