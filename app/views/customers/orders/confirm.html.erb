<h2>注文情報確認ページ</h2>
<div class="col-md-8">
	<table class="table table-hover table-inverse">
	  	<thead>
	    	<tr class="active">
		      <th>商品名</th>
		      <th>単価(税込)</th>
		      <th>数量</th>
		      <th>小計</th>
	    	</tr>
	  	</thead>
		<% total = 0 %>
	  	<% @cart_items.each do |cart_item| %>
		    <tbody>
		    	<tr>
		      		<td>
		        		<%= attachment_image_tag cart_item.product, :image, fallback: "no_image.jpg", size: "100x75" %>
		        		<%= cart_item.product.name %>
		      		</td>
		      		<td>
		        	<!-- current_userカートから単価 -->
		        		<%= (cart_item.product.price*1.1).round.to_s(:delimited) %>
		      		</td>
		      		<td>
		        <!-- current_user数量 -->
		        		<%= cart_item.quantity %>
		      		</td>
		      		<td>
		        <!-- current_userカートから小計　-->
		       			<%= ((cart_item.product.price*1.1).round*cart_item.quantity).to_s(:delimited) %>
		        		<% total += (cart_item.product.price*1.1).round*cart_item.quantity %>
		      		</td>
		    	</tr>
		  	</tbody>
	  	<% end %>
	</table>
</div>
<%= form_for(@order, url:customers_orders_path) do |f| %>
	<div class="col-md-4">
		<table class="table table-bordered right" >
		  	<tr>
		    	<th class="active">送料</th>
		    	<td><%= @order.postage %>円</td>
		  	</tr>
		 	<tr>
		    	<th class="active">商品合計</th>
		    <!-- order_product subtotalの合計 -->
		    	<td>
		      		<%= total.to_s(:delimited) %>円
		    	</td>
		  	</tr>
		  	<tr>
		    	<th class="active">請求合計</th>
		    <!-- 送料＋商品合計 -->
		    	<td><%= (@order.postage + total).to_s(:delimited) %>円</td>
		    </tr>
		</table>
	</div>

 	<div class="col-md-8">
		<table class="table table-bordered right">
			<tr>
				<th class="active" style= "width: 20%;">支払方法</th>
					<%= f.hidden_field :payment, value:@order.payment %>
				<td><%= @order.payment %></td>
			</tr>
			<tr>
				<th class="active">お届け先</th>
					<td>
						<%= f.hidden_field :postal_code, value:@order.postal_code %>
						<%= @order.postal_code %>
						<%= f.hidden_field :address, value:@order.address %>
						<%=  @order.address %>
						<br>
						<%= f.hidden_field :address_name, value:@order.address_name %>
						<%= @order.address_name %>
					</td>
					<br>
					<%= f.hidden_field :price, value:800+total %>
					<%= f.hidden_field :postage, value:800 %>
					<%= f.hidden_field :order_status, value: :入金待ち %>
					<br>
				</tr>
		</table>
	</div>
	<div class="col-md-12 text-center">
		<%= f.submit "購入を確定する", class: "btn btn-success" %>
	</div>
<% end %>


</div>