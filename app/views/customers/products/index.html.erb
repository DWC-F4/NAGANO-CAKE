
<%= render 'genre_index' %>

<div class="col-md-9">
    <div class="flex_test-box">
       	<% @products.each do |product| %>
            <div class="col-md-3">
             	<%= link_to customers_product_path(product.id) do %>
             		<%= attachment_image_tag product, :image, class: "pull-left profile-img", fallback: "no_image.jpg", size: '200x200' %>
             	<p>ジャンル：<%= product.genre.name %></p>
             	<p><%= product.name %></p>
             	<p><%= product.price %>円</p>
             	<% end %>
            </div>
        <% end %>
    </div>
</div>