
<%= render 'genre_index', genres: @genres %>

<div class="col-md-9">
    <p>
        <h2><%= @title %>一覧</h2>
        <h4>(全<%= @products.count %>件)</h4>
    </p>
    <div class="flex_test-box">

       	<% @products.each do |product| %>
                <div class="col-md-3">
                 	<%= link_to customers_product_path(product.id) do %>
                 		<%= attachment_image_tag product, :image, class: "pull-left profile-img", fallback: "no_image.jpg", size: '200x200' %>
                 	<p>ジャンル：<%= product.genre.name %></p>
                 	<p><%= product.name %></p>
                 	<p><%= product.price %>円</p>
                 	<% end %>
                </div> 
        <% end %>
    </div>
</div>
<div class="text-center"><%= paginate @products %></div>