<div class="row">
	<div class="col-xs-3">
		<h2>ジャンル検索</h2>
		<!--ジャンルのサイドバー-->
	</div>

	<div class="col-xs-9">
		<h2>
			<!--if文によりジャンルの表示・非表示-->
			商品一覧
			(全<=% products.count %>件)
		</h2>
		<div class="products-box">
			<% @products.each do |product| %>
			<%= link_to product_path(product) do %>
			<%= attachment_image_tag(products, :products_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
			<% end %>
			<%= product.name %><br>
			¥<%= product.price %>
			<% end %>
		</div>

	</div>
</div>