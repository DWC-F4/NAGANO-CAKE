<!DOCTYPE html>
<html>
  <head>
    <title>NAGANOCAKE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul class="left nav navbar-nav navbar-left">
            <%= link_to "LOGO", root_path %>
          </ul>
        </nav>

        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="name">ようこそ、<%= current_user.first_name %>さん!</li>
              <li><%= link_to 'マイページ', customers_user_path(current_user.id) %></li>
              <li><%= link_to '商品一覧', customers_products_path %></li>
              <li><%= link_to 'カート', customers_cart_items_path %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to '商品一覧', customers_products_path %></li>
              <li><%= link_to '新規登録', new_user_registration_path %></li>
              <li><%= link_to 'ログイン', new_user_session_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <div class="container">
      <p id="notice"><%= notice %></p>
    </div>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>


  </body>
</html>