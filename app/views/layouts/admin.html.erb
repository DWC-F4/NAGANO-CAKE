<!DOCTYPE html>
<html>
  <head>
    <title>NAGANOCAKE管理者用</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<header class="navbar navbar-inverse">
    	<div class="container">
        <nav>
        	<ul class="left nav navbar-nav navbar-left">
            <%= link_to admins_path, class: 'logo' do %>
              <img src="/assets/logo.png">
            <% end %>
          </ul>
        </nav>

        	<nav>
	          	<ul class="nav navbar-nav navbar-right">
	            	<% if admin_signed_in? %>
		              	<li><%= link_to '商品一覧', admins_products_path, :style=>"color:black;" %></li>
		              	<li><%= link_to '会員一覧', admins_users_path, :style=>"color:black;" %></li>
		              	<li><%= link_to '注文履歴一覧', admins_orders_path, :style=>"color:black;" %></li>
		              	<li><%= link_to 'ジャンル一覧', admins_genres_path, :style=>"color:black;" %></li>
		              	<li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, :style=>"color:black;" %></li>
	            	<% else %>
		             	<li><%= link_to '商品一覧', admins_products_path %></li>
		             	<li><%= link_to 'ログイン', new_admin_session_path, :style=>"color:black;" %></li>
	            	<% end %>
	          	</ul>
       		 </nav>
     	</div>

      <div class="search-form">
        <%= form_tag(search_path, method: :get) do %>

           <%= select_tag 'range' , options_for_select([
              ['---選択してください---', ''], ['ユーザー', '1'], ['商品', '2']
           ]) %>

           <%= select_tag 'search', options_for_select([
            ["前方一致","forward_match"], ["後方一致","backward_match"],
            ["完全一致","perfect_match"], ["部分一致","partial_match"]
           ]) %>

           <%= text_field_tag (:word) %>
           <%= submit_tag "検索" %>
        <% end %>
      </div>

    </header>

    <main>
      <% if flash[:notice] %>
        <div class="alert alert-success text-center" role="alert">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning text-center" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="container">
      	<div class="row">
      		<%= yield %>
      	</div>
      </div>
    </main>

    <footer>
      <p class="text-center footer-text">製作: DWC team F4</p>
    </footer>

  </body>
</html>


