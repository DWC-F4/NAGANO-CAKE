<div class="container">
  <div class="row">
  	<div class="col-md-offset-3 col-md-6">

  		<h2>ジャンル一覧・追加</h2>


  	<div class="form-inline">
  	    <div class="form-group">
  		  <%= form_for(@genre, url:admins_genres_path) do |f| %>
  		    	<%= f.label :ジャンル名 %>
  		    	<%= f.text_area :name %>
  	    </div>
  	    <div class="radiobutton">
  		    <label><%= f.radio_button :genre_status, :true %>有効</label>
  		    <label><%= f.radio_button :genre_status, :false %>無効</label>
  	    </div>
  	    <div class="action row">
  		    <%= f.submit '追加', class: "btn btn-primary" %>
  		 <% end %>
  		</div>
  	</div>

  		<table class="table table-hover table-inverse">
  			<thead>
  			  <tr>
  				<th>ジャンル</th>
  				<th>状態</th>
  				<th colspan="3"></th>
  			  </tr>
  			</thead>

  			<tbody>
  				<% @genres.each do |f| %>
  				<tr><%= f.name %></tr>
  				<tr><%= f.genre_status %></tr>
  				<tr><%= link_to "編集する", edit_admins_genre_path(f.id), class: "btn-sm btn-primary" %></tr>
  				<% end %>
  			</tbody>

  	</div>
  </div>
</div>