<h2>ジャンル一覧・追加</h2>
  <br>

  	<div class="new_genre">
  	    <span class="genre_form">
  		  <%= form_for(@genre, url:admins_genres_path) do |f| %>

  		    <%= render 'layouts/error', model: @genre %>    
  		    	<%= f.label :ジャンル %>
  		    	<%= f.text_field :name, required: true %>

            <label><%= f.radio_button :genre_status, :false %>有効</label>
  		    	<label><%= f.radio_button :genre_status, :true %>無効</label>
  		   		<%= f.submit '追加', class: "btn btn-primary" %>
  		 <% end %>
  		</span>
  	</div>

  		<table class=" table table-hover table-inverse">
  			<thead>
  			  <tr class="active">
    				<th>ジャンル</th>
    				<th>状態</th>
    				<th colspan="3"></th>
  			  </tr>
  			</thead>

  			<tbody>
  				<% @genres.each do |genre| %>
  			  <tr>
    				<td><%= genre.name %></td>
    				<td>
    					<% if genre.genre_status ==false %>
    						有効
    					<% else%>
    						無効
    					<% end %>
    				</td>
    				<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn-sm btn-primary" %></td>
  			  </tr>
  			  	 <% end %>
  			</tbody>
  		</table>