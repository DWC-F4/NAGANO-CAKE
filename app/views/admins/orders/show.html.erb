<h2>注文履歴詳細</h2>

  <table class="table" >
  	<thead>
  		<tr>
  			<th>購入者</th>
  			<td><%= @order.user.first_name %>&nbsp;
  				<%= @order.user.last_name %>
  			</td>
  		</tr>

  		<tr>
  			<th>配送先</th>
  			<td><%= @order.address %></td>
  		</tr>

  		<tr>
  			<th>支払方法</th>
  			<td><%= @order.payment %></td>
  		</tr>

  		<tr>
  			<th>注文ステータス</th>
  			<%= form_for(@order, url:admins_order_path) do |f| %>
  			<td><%= f.select :order_status, [入金待ち,入金確認,制作中,発送準備中,発送済み] %></td>
  			<td><%= f.submit '更新', class: "btn btn-primary" %></td>
  			<% end %>
  		</tr>
  	</thead>

  	<tbody>
  			<%= @order_details each do |order_detail| %>
  		<tr>
  			<th>商品名</th>
  			<th>単価（税込）</th>
  			<th>数量</th>
  			<th>小計</th>
  			<th>制作ステータス</th>
  			<th colspan="1"></th>
  		</tr>

  		<tr>
  			<td><%= order_detail.product.name %></td>
  			<td><%= order_detail.product.price %></td>
  			<td><%= order_detail.quantity %></td>
  			<td><%= order_detail.product.price * order_detail.quantity %></td>
  			<td><%= order_detail.product_status %></td>
  			<td><%= order_detail.submit '更新', class: "btn btn-primary" %></td>
  		</tr>
  			<% end %>
  	</tbody>
  </table>

  <div style="text-align:right;">
  	<% @cart_item.each do |cart_item| %>
  	<table>
  	  <tr>
  		<th>商品合計</th>
  		<td></td>
  	  </tr>

  	  <tr>
  	  	<th>送料</th>
  	  	<td></td>
  	  </tr>

  	  <tr>
  	  	<th>請求金額合計</th>
  	  	<td></td>
  	  </tr>

  	</table>
  </div>