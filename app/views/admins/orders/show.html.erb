<h2>注文履歴詳細</h2>

  <table class="table" >
  	<thead>
  		<tr>
  			<th>購入者</th>
  			<td><%= link_to admins_user_path(@order.user) do %>
  				<%= @order.user.first_name %>&nbsp;
  				<%= @order.user.last_name %>
  				<% end %>
  			</td>
  		</tr>

  		<tr>
  			<th>配送先</th>
  			<td><%= @order.address %></td>
  		</tr>

  		<tr>
  			<th>支払方法</th>
  			<td><%= @order.payment %></td>
  		</tr>

  		<tr>
  			<th>注文ステータス</th>
  			<%= form_for(@order, url:admins_order_path) do |f| %>
  			<td><%= f.select :order_status, Order.order_statuses.keys.to_a,{}, class: "form-control" %></td>
  			<td><%= f.submit '更新', class: "btn btn-primary" %></td>
  			<% end %>
  		</tr>
  	</thead>

  	<tbody>
        <% @sum = 0 %>
  			<% @order.order_details.each do |order_detail| %>
  		<tr>
  			<th>商品名</th>
  			<th>単価（税込）</th>
  			<th>数量</th>
  			<th>小計</th>
  			<th>製作ステータス</th>
  			<th colspan="1"></th>
  		</tr>

  		<tr>
  			<td><%= order_detail.product.name %></td>
  			<td><%= (order_detail.product.price*1.1).round.to_s(:delimited) %></td>
  			<td><%= order_detail.quantity %></td>
  			<td><%= ((order_detail.product.price*1.1).round. * order_detail.quantity).to_s(:delimited) %></td>
  			<td><%= form_for(order_detail, url:admins_order_detail_path(order_detail)) do |f| %>
  				<%= f.select :product_status, OrderDetail.product_statuses.keys.to_a,{},class: "form-control" %>
  			</td>
  			<td><%= f.submit '更新', class: "btn btn-primary" %></td>
  				  <% end %>
  		</tr>
      <% @sum += (order_detail.product.price * order_detail.quantity)  %>
  			<% end %>
  	</tbody>
  </table>

  <div class="col text-right">
  	<table>
  	  <tr>
  		<th>商品合計</th>
  		<td><%= @sum %></td>
  	  </tr>

  	  <tr>
  	  	<th>送料</th>
  	  	<td><%= 800 %></td>
  	  </tr>

  	  <tr>
  	  	<th>請求金額合計</th>
  	  	<td><%= (@sum + 800).to_s(:delimited) %></td>
  	  </tr>
  	</table>
  </div>