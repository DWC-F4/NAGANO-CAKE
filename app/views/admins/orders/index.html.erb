<h2>注文履歴一覧</h2>
  <br>

  	<table class="table table-hover table-inverse">
  			<thead>
  			  <tr>
  				  <th>購入日時</th>
  				  <th>購入者</th>
  				  <th>注文個数</th>
            <th>注文ステータス</th>
  			  </tr>
  			</thead>

  			<tbody>
  				<% @orders.each do |order| %>
  			    <tr>
  				    <td><%= link_to order.created_at, order %></td>
              <td><%= order.user.first_name %>
                  <%= order.user.last_name %>
              </td>
              <td><%= order.order_detail.quantity %></td>
  				    <td>
  					      <% if order.order_status ==1 %>
  					  	   入金待ち
  					      <% elsif order.order_status ==2 %>
  					  	   入金確認
                  <% elsif order.order_status ==3 %>
                   制作中
                  <% elsif order.order_status ==4 %>
                   発送準備中
                  <% elsif order.order_status ==5 %>
                   発送済み
  				        <% end %>
  				   </td>
  			  </tr>
  			 <% end %>
  			</tbody>
  	</table>