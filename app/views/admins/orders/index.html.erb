<h2>注文履歴一覧</h2>
  <br>

  	<table class="table table-hover table-inverse">
  			<thead>
  			  <tr>
  				  <th>購入日時</th>
  				  <th>購入者</th>
  				  <th>注文個数</th>
            <th>注文ステータス</th>
  			  </tr>
  			</thead>

  			<tbody>
  				<% @orders.each do |order| %>
  			    <tr>
  				    <td><%= link_to order.created_at.to_s(:datetime_jp), admins_order_path(order) %></td>
              <td><%= order.user.first_name %>
                  <%= order.user.last_name %>
              </td>
              <td>
                  <% order.order_details.each do |order_detail| %>
                  <%= order_detail.quantity %>
                  <% end %>
              </td>
  				    <td>
  					      <%= order.order_status %>
  				   </td>
  			  </tr>
  			 <% end %>
  			</tbody>
  	</table>