<h1>商品詳細</h1>

<div class="col-xs-4">
	<%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg',fallback: "no_image.jpg",size:'300x200' %>
</div>

<div class="col-xs-8">
	<table>
		<tbody>
			<tr>
				<td>商品名</td><td><%= @product.name %></td>
			</tr>
			<tr>
				<td>商品説明</td><td><%= @product.introduction %></td>
			</tr>
			<tr>
				<td>ジャンル</td><td><%= @product.genre.name %></td>
			</tr>
			<tr>
				<td>税込価格 (税抜価格)</td><td><%= (@product.price*1.10).round.to_s(:delimited)%>
					<%= "(#{@product.price.to_s(:delimited)})" %>  円
				</td>
			</tr>
			<tr>
				<td>販売ステータス</td>
				<td>
					<% if @product.sales_status ==false %>
						販売中
					<% else %>
						販売停止中
					<% end %>
				</td>
			</tr>
		</tbody>
	</table>


	<div class="col text-right">
		<%= link_to "編集する",edit_admins_product_path(@product), class:" btn btn-primary" %>
	</div>
</div>


